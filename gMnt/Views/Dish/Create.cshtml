@model gLibrary.Models.Dish

@{
    ViewBag.Title = "Dish - Create";
}

<h2>Create Dish</h2>

@using (Html.BeginForm("Create", "Dish", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Dish</legend>

        <div class="line">
            <div class="line-left">@Html.LabelFor(model => model.RestaurantId)</div>
            <div class="line-right">
                @Html.DropDownListFor(model => model.RestaurantId, (SelectList)ViewBag.RestaurantId, String.Empty)
                @Html.ValidationMessageFor(model => model.RestaurantId)
            </div>
        </div>
        <div class="line">
            <div class="line-left">
                @Html.LabelFor(model => model.Bilingual.Name)
            </div>
            <div class="line-right">
                @Html.EditorFor(model => model.Bilingual.Name)
                @Html.ValidationMessageFor(model => model.Bilingual.Name)
            </div>
        </div>
        <div class="line">
            <div class="line-left">
                @Html.LabelFor(model => model.Bilingual.AlienName)
            </div>
            <div class="line-right">
                @Html.EditorFor(model => model.Bilingual.AlienName)
                @Html.ValidationMessageFor(model => model.Bilingual.AlienName)
            </div>
        </div>

        <div class="line">
            <div class="line-left">
                @Html.LabelFor(model => model.Introduction)
            </div>
            <div class="line-right">
                @Html.TextAreaFor(model => model.Introduction)
                @Html.ValidationMessageFor(model => model.Introduction)
            </div>
        </div>
        <div class="line">
            <div class="line-left">@Html.LabelFor(model => model.CategoryId)</div>
            <div class="line-right">
                @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.Category, String.Empty)
                @Html.ValidationMessageFor(model => model.CategoryId)
            </div>
        </div>
        <div class="line">
            <div class="line-left">
                @Html.LabelFor(model => model.Price)
            </div>
            <div class="line-right">
                @Html.EditorFor(model => model.Price)
                @Html.ValidationMessageFor(model => model.Price)
            </div>
        </div>

        <div class="line">
            <div class="line-left">
                @Html.LabelFor(model => model.DishImage)
            </div>
            <div class="line-right">
                <div id="image-file"><input type="file" id="file" name="file" /></div>

                <div id="dish-image">
                    <img id="image" alt="Dish Image" src="@Url.Content("~/Images/Dishes/Empty.png")" />
                </div>
            </div>
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script src="@Url.Content("~/Scripts/gMnt/dish.js")" type="text/javascript"></script>
}

