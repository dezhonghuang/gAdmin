@model IEnumerable<gLibrary.Models.Table>

@{
    ViewBag.Title = "Tables";
}

<h2>@Html.ActionLink("<-- Restaurant", "Index", "Restaurant")</h2>
<h2>Tables</h2>

<p>
    @Html.ActionLink("New Table", "Create", new { rid = ViewBag.RestaurantId })
</p>
<table>
    <tr>
        <th>
            Number
        </th>
        <th>
            Seats
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TableNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seats)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
