@model gLibrary.Models.Table

@{
    ViewBag.Title = "New Table";
}

<h2>New Table</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Table</legend>

        @Html.HiddenFor(model => model.RestaurantId)

        <div class="line">
            <div class="line-left">@Html.LabelFor(model => model.TableNumber)</div>
            <div class="line-right">@Html.EditorFor(model => model.TableNumber)</div>
            @Html.ValidationMessageFor(model => model.TableNumber)
        </div>

        <div class="line">
           <div class="line-left">@Html.LabelFor(model => model.Seats)</div>
           <div class="line-right">@Html.EditorFor(model => model.Seats)</div>
            @Html.ValidationMessageFor(model => model.Seats)
        </div>

        <p class="delete-title">
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { rid = Model.RestaurantId })
</div>
