@model gLibrary.Models.Table

@{
    ViewBag.Title = "Table - Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Table</legend>

        @Html.HiddenFor(model => model.RestaurantId)
        @Html.HiddenFor(model => model.TableNumber)
        
        @Html.HiddenFor(model => model.Id)
        <div class="display-label">Table #</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.TableNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Seats)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Seats)
            @Html.ValidationMessageFor(model => model.Seats)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { rid = Model.RestaurantId })
</div>
