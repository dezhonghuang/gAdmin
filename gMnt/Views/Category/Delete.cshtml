@model gLibrary.Models.Category

@{
    ViewBag.Title = "Category - Delete";
}

<h2>Delete Category</h2>

<h3 class="delete-title">Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Category</legend>

    <div class="line">
        <div class="line-left">
             Name
        </div>
        <div class="line-right">
            @Html.DisplayFor(model => model.Bilingual.Name)
        </div>
    </div>
    <div class="line">
        <div class="line-left">
             Alien Name
        </div>
        <div class="line-right">
            @Html.DisplayFor(model => model.Bilingual.AlienName)
        </div>
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p class="delete-title">
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
