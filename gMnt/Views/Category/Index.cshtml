@model IEnumerable<gLibrary.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>
<p>@Html.ActionLink("Create New", "Create")</p>


<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Alien Name
        </th>
        <th>
            Restaurant
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="items">
        <td>
            @Html.DisplayFor(modelItem => item.Bilingual.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bilingual.AlienName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Restaurant.Bilingual.FullName)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>

