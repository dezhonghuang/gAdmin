@model gLibrary.Models.Restaurant

@{
    ViewBag.Title = "Restaurant - Create";
}

<h2>New Restaurant</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Restaurant", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Restaurant</legend>

        <ul class="restaurant">

            <li>    @Html.TextBoxFor(model => model.Bilingual.Name, new { placeholder = @Html.DisplayNameFor(m => m.Bilingual.Name) })</li>
                <li>@Html.ValidationMessageFor(model => model.Bilingual.Name)</li>

                <li>@Html.TextBoxFor(model => model.Bilingual.AlienName, new { placeholder = @Html.DisplayNameFor(m => m.Bilingual.AlienName)})</li>
                <li>@Html.ValidationMessageFor(model => model.Bilingual.AlienName)</li>

                <li>@Html.TextBoxFor(model => model.Address.FullAddress, new { placeholder = @Html.DisplayNameFor(m => m.Address.FullAddress) })</li>

        <li>@Html.HiddenFor(model => model.Address.StreetNumber, new { id = "StreetNumber" })</li>
        <li>@Html.HiddenFor(model => model.Address.StreetId, new { id = "StreetId" })</li>

                <li>@Html.TextBoxFor(model => model.Phone, new { placeholder = @Html.DisplayNameFor(m => m.Phone) })</li>
                <li>@Html.ValidationMessageFor(model => model.Phone)</li>
                <li>@Html.DropDownListFor(model => model.MenuType, (SelectList)ViewBag.MenuTypeId)</li>
                <li>@Html.ValidationMessageFor(model => model.MenuType)</li>
                <li><input type="file" id="file" name="file" /></li>

        <li>
            <input type="submit" value="Create" />
        </li>
        </ul>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/gMnt/address.js")"></script>
}
