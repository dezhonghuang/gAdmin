@model gMnt.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

    <h2>Sign Up</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
            <div class="line">
                <div class="line-left">@Html.LabelFor(m => m.UserName)</div>
                <div class="line-right">@Html.TextBoxFor(m => m.UserName)</div>
            </div>
            <div class="line">
                <div class="line-left">@Html.LabelFor(m => m.Password)</div>
                <div class="line-right">@Html.PasswordFor(m => m.Password)</div>
            </div>
            <div class="line">
                <div class="line-left">@Html.LabelFor(m => m.ConfirmPassword)</div>
                <div class="line-right">@Html.PasswordFor(m => m.ConfirmPassword)</div>
            </div>
