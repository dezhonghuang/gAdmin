            </div>
            <div class="line">
                <div class="line-left">@Html.LabelFor(m => m.RestaurantId)</div>
                <div class="line-right">@Html.DropDownListFor(m => m.RestaurantId, (SelectList)ViewBag.RestaurantId, String.Empty)</div>
            </div>*@
